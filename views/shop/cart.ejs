<%- include('../includes/head.ejs') %>
</head>
<%- include('../includes/navigation.ejs') %>



<main>
    <%- include('../includes/profile-data.ejs') %>

    <div class="container">
        <div class="center-align headings">
            <h4 class="wds-midlight-aqua">
                Cart
            </h4>
        </div>
        <% if (userData.cart.items.length > 0) { %>
        <div class="row">
            <% for (let product of products) { %>
            <article class="col s12 m6 l4 xl3 card-col__custom">
                <div class="card sticky-action card__custom">
                    <div class="card-image card-custom__image">
                        <img class="activator" src="<%= product.prod.imageUrl[0] %>" alt="<%= product.prod.title %>"
                            style="object-fit: cover;">

                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" value="<%= product.prod._id %>" name="artworkId">


                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">
                            <h5><%= product.prod.price %> â‚¬</h5><i class="material-icons right">more_vert</i>
                        </span>
                        <p><a
                                href="<%= '/admin/user/' + product.fromUser._id %>"><%= product.fromUser.address.firstName + " " + product.fromUser.address.surname %></a>
                        </p>
                    </div>
                    <div class="card-action">
                        <p style="color:forestgreen">PURCHASED</p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">
                            <h4 style="text-transform:capitalize"><%= product.prod.title %></h4><i
                                class="material-icons right red-text">close</i>
                        </span>
                        <p><%= product.prod.description %></p>
                    </div>
                </div>
            </article>
            <% } %>
        </div>

        <% } else { %>
        <h5 class="center-align" style="margin-bottom:40px">Artworks don't buy themselves!</h5>
        <% } %>
    </div>

    <%- include('../includes/profile-end.ejs') %>
    <script src="/js/deleteFavorite.js"></script>
    <%- include('../includes/end.ejs') %>