    document.addEventListener('DOMContentLoaded', () => {
        const elem = document.getElementById('desc')
        return M.CharacterCounter.init(elem)
    });

    document.addEventListener('DOMContentLoaded', () => {
        const elem = document.getElementById('message')
        return M.CharacterCounter.init(elem)
    });
</script>