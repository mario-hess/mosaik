<div id="modal-add-artwork" class="modal">
    <div class="modal-content">
        <h5 class="center-align modal-heading-background">Add Artwork</h5>
        <div class="row">
            <form class="col s12" action="/admin/add-product" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div
                        class="input-field input-field-modal col s10 m8 l6 xl4 offset-s1 offset-m2 offset-l3 offset-xl4">
                        <input id="title" name="title" type="text" class="validate">
                        <label for="title">Title</label>
                    </div>
                </div>
                <div class="row">
                    <div
                        class="file-field input-field input-field-modal col s10 m8 l6 xl4 offset-s1 offset-m2 offset-l3 offset-xl4">
                        <div class="btn waves-effetct waves-light colrr">
                            <span>File</span>
                            <input type="file" name="image" id="image_add" multiple>
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div
                        class="input-field input-field-modal col s10 m8 l6 xl4 offset-s1 offset-m2 offset-l3 offset-xl4">
                        <input id="price" name="price" type="number" class="validate">
                        <label for="price">Price</label>
                    </div>
                </div>
                <div class="row">
                    <div
                        class="input-field input-field-modal col s10 m8 l6 xl4 offset-s1 offset-m2 offset-l3 offset-xl4">
                        <input id="category" name="category" type="text" class="validate">
                        <label for="category">Category</label>
                    </div>
                </div>
                <div class="row">
                    <div
                        class="input-field input-field-modal col s10 m8 l6 xl4 offset-s1 offset-m2 offset-l3 offset-xl4">
                        <textarea id="description" name="description" type="text"
                            class="validate materialize-textarea"></textarea>
                        <label for="description">Description</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s10 m8 l6 xl4 offset-s1 offset-m2 offset-l3 offset-xl4">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" href="#!"
                            class="modal-close waves-effect waves-light colrr btn left center-align"><i
                                class="material-icons btn-icon">add</i>Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>